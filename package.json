{
	"name": "fire-shield",
	"version": "1.0.0",
	"description": "Flexible RBAC (Role-Based Access Control) package with adapters for multiple frameworks",
	"private": true,
	"workspaces": [
		"benchmarks",
		"packages/core",
		"packages/adaptor/*",
		"packages/cli"
	],
	"scripts": {
		"build": "turbo run build",
		"build:core": "turbo run build --filter=@fire-shield/core",
		"build:adaptors": "turbo run build --filter=./adaptor/*",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"test:core": "turbo run test --filter=@fire-shield/core",
		"lint": "turbo run lint",
		"typecheck": "turbo run typecheck",
		"clean": "turbo run clean",
		"release": "turbo run build && changeset publish",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^8.18.1",
		"@typescript-eslint/parser": "^8.18.1",
		"@vue/test-utils": "^2.4.6",
		"eslint": "^8.0.0",
		"happy-dom": "^12.10.3",
		"jsdom": "^27.2.0",
		"turbo": "^2.6.1",
		"typescript": "^5.0.0",
		"vitepress": "^1.6.4",
		"vue": "^3.5.24",
		"vue-router": "^4.6.3"
	},
	"overrides": {
		"graphql": "^16.8.1"
	},
	"packageManager": "npm@9.0.0",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/khapu2906/fire-shield.git"
	},
	"keywords": [
		"rbac",
		"authorization",
		"permissions",
		"access-control",
		"security",
		"monorepo"
	],
	"author": "Fire Shield Team",
	"license": "DIB"
}
