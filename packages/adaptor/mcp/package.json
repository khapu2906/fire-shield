  },
  "keywords": [
    "rbac",
    "mcp",
    "model-context-protocol",
    "ai",
    "agents",
    "authorization",
    "permissions",
    "access-control",
    "fire-shield"
  ],
  "author": "Fire Shield Team",
  "license": "DIB",
  "repository": {
    "type": "git",
    "url": "https://github.com/khapu2906/RBAC.git",
    "directory": "packages/adaptor/mcp"
  },
  "dependencies": {
    "@fire-shield/core": "^2.2.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=0.5.0"
  }
