{
  "name": "@fire-shield/mcp",
  "version": "2.2.1",
  "description": "Model Context Protocol (MCP) adapter for Fire Shield RBAC - AI agent integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
