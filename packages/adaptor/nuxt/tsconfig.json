{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"]
    }
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "lib/__tests__"]
}
