{
  "name": "@fire-shield/core",
  "version": "2.2.0",
  "description": "Fire Shield - A powerful, flexible RBAC (Role-Based Access Control) library with lightning-fast bit-based permissions, wildcards, audit logging, and zero dependencies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint lib/**/*.ts",
    "lint:fix": "eslint lib/**/*.ts --fix"
  },
  "keywords": [
    "rbac",
    "authorization",
    "permissions",
    "access-control",
    "security",
    "fire-shield",
    "audit-logging",
    "wildcard-permissions",
    "deny-permissions",
    "role-hierarchy",
    "bit-based",
    "typescript"
  ],
  "author": "Developers in Black (DIB)",
  "repository": {
    "type": "git",
    "url": "https://github.com/khapu2906/fire-shield.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/khapu2906/fire-shield#readme",
  "bugs": {
    "url": "https://github.com/khapu2906/fire-shield/issues"
  },
  "license": "DIB",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
